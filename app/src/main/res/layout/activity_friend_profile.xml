<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FriendProfile">

    <View
        android:id="@+id/V_FriendProfile_Head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#67DE73"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_FriendProfile_HeadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Profile"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/V_FriendProfile_Head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Btn_FriendProfile_Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/V_FriendProfile_Head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/V_FriendProfile_Head"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@android:drawable/ic_menu_search"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/IV_FriendProfile_ProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/V_FriendProfile_Head"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/V_FriendProfile_Info"
        android:layout_width="160dp"
        android:layout_height="128dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="#67DE73"
        app:layout_constraintStart_toEndOf="@+id/IV_FriendProfile_ProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/V_FriendProfile_Head" />

    <TextView
        android:id="@+id/TV_FriendProfile_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/V_FriendProfile_Info"
        app:layout_constraintTop_toTopOf="@+id/V_FriendProfile_Info" />

    <TextView
        android:id="@+id/TV_FriendProfile_Interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/V_FriendProfile_Info"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_Residence" />

    <TextView
        android:id="@+id/TV_FriendProfile_Residence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/V_FriendProfile_Info"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_Nickname" />

    <TextView
        android:id="@+id/TV_FriendProfile_FullNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="35dp"
        android:text="Full Name:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IV_FriendProfile_ProfilePic" />

    <TextView
        android:id="@+id/TV_FriendProfile_BioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:text="Bio:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_FullName" />

    <TextView
        android:id="@+id/TV_FriendProfile_PhoneNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:text="Phone Number:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_Bio" />

    <TextView
        android:id="@+id/TV_FriendProfile_FullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_FullNameTitle" />

    <TextView
        android:id="@+id/TV_FriendProfile_Bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_BioTitle" />

    <TextView
        android:id="@+id/TV_FriendProfile_PhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_PhoneNumberTitle" />

    <Button
        android:id="@+id/Btn_FriendProfile_Chat"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="13dp"
        android:background="#67DE73"
        android:text="Chat"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_FriendProfile_PhoneNumber" />

    <Button
        android:id="@+id/Btn_FriendProfile_DeleteFriend"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="#DD2020"
        android:text="Delete Friend"
        android:textColor="#FFF8E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_FriendProfile_Chat" />

</androidx.constraintlayout.widget.ConstraintLayout>

