<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clickable_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable">

    <TextView
        android:id="@+id/customListTV"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_toRightOf="@id/imageDP"
        android:gravity="bottom"
        android:paddingLeft="50px"
        android:text="eqwe"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/customListTV2"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_below="@id/customListTV"
        android:layout_toRightOf="@id/imageDP"
        android:paddingLeft="50px"
        android:text="TextView"
        android:textColor="#020202" />

    <ImageView
        android:id="@+id/imageDP"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginStart="19px"
        android:layout_marginTop="38px"
        android:layout_marginEnd="19px"
        android:layout_marginBottom="19px"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>